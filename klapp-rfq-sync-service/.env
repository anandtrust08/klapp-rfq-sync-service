# =============================================================================
# RFQ Sync Service Environment Variables
# =============================================================================

# Service Info
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_CONSUMER_GROUP=rfq-sync-service

# Email Service Database
EMAIL_DB_HOST=postgres-ai
EMAIL_DB_PORT=5432
EMAIL_DB_NAME=klapp_ai_procurement
EMAIL_DB_USER=postgres
EMAIL_DB_PASSWORD=changeme

# Medusa Database
MEDUSA_DB_HOST=postgres-medusa
MEDUSA_DB_PORT=5432
MEDUSA_DB_NAME=klapp-backend
MEDUSA_DB_USER=postgres
MEDUSA_DB_PASSWORD=postgres

# Redis
REDIS_URL=redis://redis:6379/5

# Metrics
METRICS_PORT=9100
ENABLE_METRICS=true

